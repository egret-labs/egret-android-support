<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:text="Log In"
        android:textColor="#444"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/user_center_top_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/default_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/default_avatar_grey_bg"
            android:padding="22dip"
            android:src="@drawable/user" />

    </LinearLayout>

<!--     <TextView
        android:id="@+id/tv_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:text="@string/user_center_visit"
        android:textColor="@color/c_text_color"
        android:textSize="@dimen/c_text_size_list" /> -->

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp" />
</LinearLayout>
